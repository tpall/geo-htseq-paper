@article{cokelaer2017,
    author = {Cokelaer, Thomas and Chen, Elisabeth and Iorio, Francesco and Menden, Michael P and Lightfoot, Howard and Saez-Rodriguez, Julio and Garnett, Mathew J},
    title = "{GDSCTools for mining pharmacogenomic interactions in cancer}",
    journal = {Bioinformatics},
    volume = {34},
    number = {7},
    pages = {1226-1228},
    year = {2017},
    month = {11},
    abstract = "{Large pharmacogenomic screenings integrate heterogeneous cancer genomic datasets as well as anti-cancer drug responses on thousand human cancer cell lines. Mining this data to identify new therapies for cancer sub-populations would benefit from common data structures, modular computational biology tools and user-friendly interfaces.We have developed GDSCTools: a software aimed at the identification of clinically relevant genomic markers of drug response. The Genomics of Drug Sensitivity in Cancer (GDSC) database (www.cancerRxgene.org) integrates heterogeneous cancer genomic datasets as well as anti-cancer drug responses on a thousand cancer cell lines. Including statistical tools (analysis of variance) and predictive methods (Elastic Net), as well as common data structures, GDSCTools allows users to reproduce published results from GDSC and to implement new analytical methods. In addition, non-GDSC data resources can also be analysed since drug responses and genomic features can be encoded as CSV files.Supplementary data are available at Bioinformatics online.}",
    issn = {1367-4803},
    doi = {10.1093/bioinformatics/btx744},
    url = {https://doi.org/10.1093/bioinformatics/btx744},
    eprint = {https://academic.oup.com/bioinformatics/article-pdf/34/7/1226/25119562/btx744.pdf},
}

